#post_content
    %h1= @post.title
    %p= @post.content

    #comments
        %h3
            = @post.comments.count 
            comments
        
        = render @post.comments

        %h3 Reply to thread
        = render "comments/form"
    
    %br/
    %hr/
    %br/

    = link_to "Edit", edit_post_path(@post)
    = link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to do this ?" }
    = link_to "Home", posts_path